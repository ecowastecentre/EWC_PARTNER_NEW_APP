<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MintCream">

    <TextView
        android:id="@+id/forgotpassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Forgot Password"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/PartnerRegistration"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/forgotpassword"
        android:gravity="center_horizontal"
        android:text="6 digit password will be sent on your registered mobile/email"
        android:textColor="#000000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Layout"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/PartnerRegistration"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"

        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextPhone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:hint=" Partner  "
            android:inputType="phone"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="OR"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint=" Mobile / Email "
            android:inputType="textEmailAddress" />


    </LinearLayout>

    <Button
        android:layout_width="360dp"
        android:layout_height="wrap_content"

        android:layout_below="@id/Layout"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp"
        android:text="Submit"
        android:textColor="#f8f8ff"
        android:textSize="20sp"></Button>
</RelativeLayout>